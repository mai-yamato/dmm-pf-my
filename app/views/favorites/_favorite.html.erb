<% if temple.favorited_by?(current_user) %>
  <%= link_to temple_favorites_path(temple), method: :delete, remote: true do %>
  ♥<%= temple.favorites.count %>
  <% end %>
<% else %>
  <%= link_to temple_favorites_path(temple), method: :post, remote: true do %>
  ♡<%= temple.favorites.count %>
  <% end %>
<% end %>
